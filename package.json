		"date-fns": "^2.30.0",
		"lemmy-js-client": "^0.18.0",
		"markdown-it": "^13.0.1",
		"markdown-it-container": "^3.0.0",
		"markdown-it-footnote": "^3.0.3",
		"markdown-it-ruby": "^0.1.1",
		"markdown-it-sub": "^1.0.0",
		"markdown-it-sup": "^1.0.0",
		"sass": "^1.63.6",
		"sheodox-ui": "^0.19.27"
	}
}
